    <!-- Script para archivar cuentas -->
    <script>
        function archivarCuenta(cuentaId) {
            if (confirm('¿Estás seguro que deseas archivar esta cuenta? No se mostrará en la lista principal.')) {
                fetch('/auditoria/patrimonio/archivar', {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ cuenta_id: cuentaId })
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Error en la respuesta del servidor');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        // Eliminar la fila de la tabla
                        const row = document.getElementById(`cuenta-row-${cuentaId}`);
                        if (row) {
                            row.remove();
                            // Mostrar mensaje de éxito
                            alert('Cuenta archivada correctamente');
                        }
                    } else {
                        alert('Error al archivar la cuenta: ' + (data.error || ''));
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al archivar la cuenta: ' + error.message);
                });
            }
        }

        // Función para copiar al portapapeles
    // Función mejorada para copiar al portapapeles
    function copyToClipboard(text) {
        // Crear un elemento de texto temporal
        const textarea = document.createElement('textarea');
        textarea.value = text;
        textarea.style.position = 'fixed';  // Evitar que provoque scroll
        document.body.appendChild(textarea);
        textarea.select();
        
        try {
            // Intentar copiar usando el API moderno
            if (navigator.clipboard) {
                navigator.clipboard.writeText(text).then(() => {
                    showCopyFeedback(event.target);
                }).catch(err => {
                    console.error('Error con Clipboard API:', err);
                    fallbackCopyText(text);
                });
            } else {
                // Fallback para navegadores antiguos
                fallbackCopyText(text);
            }
        } catch (err) {
            console.error('Error al copiar:', err);
            fallbackCopyText(text);
        } finally {
            document.body.removeChild(textarea);
        }
    }

    // Método alternativo para navegadores que no soportan Clipboard API
    function fallbackCopyText(text) {
        try {
            const successful = document.execCommand('copy');
            if (successful) {
                showCopyFeedback(event.target);
            } else {
                console.error('Fallback copy failed');
                alert('No se pudo copiar. Por favor copia manualmente: ' + text);
            }
        } catch (err) {
            console.error('Error en fallback copy:', err);
            alert('No se pudo copiar. Por favor copia manualmente: ' + text);
        }
    }

    // Mostrar feedback visual cuando se copia
    function showCopyFeedback(button) {
        if (!button) return;
        
        const originalIcon = button.innerHTML;
        const originalColor = button.style.color;
        
        button.innerHTML = '<i class="fas fa-check"></i>';
        button.style.color = '#28a745';
        
        setTimeout(() => {
            button.innerHTML = originalIcon;
            button.style.color = originalColor;
        }, 1000);
    }

    // Función para expandir/contraer links
    function toggleExpandLink(button) {
        const expandableLink = button.closest('.expandable-link');
        const linkText = expandableLink.querySelector('span, a');
        
        if (!linkText) return;
        
        if (linkText.classList.contains('expanded-link')) {
            // Contraer
            linkText.classList.remove('expanded-link');
            if (linkText.tagName === 'SPAN') {
                const fullText = expandableLink.querySelector('.full-link').textContent;
                linkText.textContent = fullText.length > 20 ? fullText.substring(0, 20) + '...' : fullText;
            }
            button.innerHTML = '<i class="fas fa-expand"></i>';
            button.title = 'Expandir';
        } else {
            // Expandir
            linkText.classList.add('expanded-link');
            if (linkText.tagName === 'SPAN') {
                linkText.textContent = expandableLink.querySelector('.full-link').textContent;
            }
            button.innerHTML = '<i class="fas fa-compress"></i>';
            button.title = 'Contraer';
        }
    }

        // Inicializar eventos para los botones de mostrar/ocultar contraseña
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.toggle-password-vis').forEach(icon => {
                icon.addEventListener('click', function() {
                    const passwordDisplay = this.previousElementSibling;
                    if (passwordDisplay.classList.contains('visible')) {
                        passwordDisplay.classList.remove('visible');
                        if (passwordDisplay.textContent === '********') {
                            // No hacer nada si ya está oculto
                        } else {
                            passwordDisplay.textContent = '********';
                        }
                        this.classList.remove('fa-eye-slash');
                        this.classList.add('fa-eye');
                        this.title = 'Mostrar Contraseña';
                    } else {
                        const row = this.closest('tr');
                        const cuentaData = JSON.parse(row.getAttribute('data-cuenta'));
                        const isMail = passwordDisplay.parentElement.classList.contains('password-col') && 
                                      passwordDisplay.textContent.includes('@');
                        
                        if (isMail) {
                            passwordDisplay.textContent = cuentaData.contrasena_mail || '-';
                        } else {
                            passwordDisplay.textContent = cuentaData.contrasena || '-';
                        }
                        passwordDisplay.classList.add('visible');
                        this.classList.remove('fa-eye');
                        this.classList.add('fa-eye-slash');
                        this.title = 'Ocultar Contraseña';
                    }
                });
            });
        });
    </script>
