    <script>
        // CÓDIGO PARA MANEJAR EL RESUMEN Y CARDS (SIN CAMBIOS, YA ESTABA BIEN)
        document.addEventListener('DOMContentLoaded', function() {
            const toggleBtn = document.getElementById('toggle-resumen');
            const resumenList = document.getElementById('resumen-list');
            const cardsContainer = document.getElementById('vendedor-cards-container');
            const sellerFilter = document.getElementById('seller-name-filter');
            const noSellerMsg = document.getElementById('no-seller-found-message');
            const header = document.querySelector('.vendedor-section-header'); // Selecciona el contenedor del header
            const showAllBtn = document.createElement('button'); // Crea el botón

            // Configuración inicial
            cardsContainer.style.display = 'none'; // Ocultar cards al inicio

            // Toggle para expandir/contraer el resumen
            if (toggleBtn && resumenList) {
                toggleBtn.addEventListener('click', function() {
                    resumenList.classList.toggle('collapsed');
                    const icon = this.querySelector('i');
                    const isCollapsed = resumenList.classList.contains('collapsed');
                    icon.className = isCollapsed ? 'fas fa-chevron-down' : 'fas fa-chevron-up';
                    this.childNodes[1].nodeValue = isCollapsed ? ' Expandir' : ' Contraer'; // Actualiza texto del botón
                });
            }

            // Clic en item del resumen muestra la card correspondiente
            document.querySelectorAll('.resumen-item').forEach(item => {
                item.addEventListener('click', function() {
                    const vendedorId = this.getAttribute('data-vendedor-id');
                    const card = document.getElementById(`vendedor-card-${vendedorId}`);

                    if (card) {
                        // Asegura que el contenedor de cards esté visible (como grid)
                        cardsContainer.style.display = 'grid';
                        cardsContainer.classList.add('visible'); // Añade clase si usas CSS para mostrar

                        // Oculta todas las cards excepto la seleccionada
                        document.querySelectorAll('.vendedor-card').forEach(c => {
                            c.style.display = (c.id === `vendedor-card-${vendedorId}`) ? 'block' : 'none';
                        });

                        // Scroll y highlight
                        card.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                        card.classList.add('highlighted');
                        setTimeout(() => card.classList.remove('highlighted'), 2000);
                    }
                });
            });

            // Filtro por nombre (afecta resumen y cards si están visibles)
            if (sellerFilter) {
                sellerFilter.addEventListener('input', function() {
                    const filterValue = this.value.toLowerCase().trim();
                    let resumenVisible = false;
                    let cardsVisible = false; // Para saber si hay alguna card visible

                    // Filtrar en el resumen
                    document.querySelectorAll('.resumen-item').forEach(row => {
                        const nombre = row.querySelector('.resumen-nombre span').textContent.toLowerCase();
                        const matches = nombre.includes(filterValue);
                        row.style.display = matches ? '' : 'none';
                        if (matches) resumenVisible = true;
                    });

                    // Filtrar en las cards (solo si el contenedor de cards está visible)
                    if (cardsContainer.style.display === 'grid') {
                         document.querySelectorAll('.vendedor-card').forEach(card => {
                            const nombre = card.querySelector('.vendedor-nombre').textContent.toLowerCase();
                            const matches = nombre.includes(filterValue);
                            // Muestra u oculta basado en el filtro Y si la card no estaba ya oculta por selección
                            if (card.style.display !== 'none' || filterValue === '') { // Si el filtro está vacío, muestra todas las que no estaban ocultas
                                card.style.display = matches ? 'block' : 'none';
                            }
                            if (matches && card.style.display === 'block') cardsVisible = true;
                         });
                    }

                     // Mostrar mensaje "No encontrado" solo si NADA es visible en ambas secciones
                    const shouldShowNoSellerMsg = !resumenVisible && (!cardsVisible && cardsContainer.style.display === 'grid');
                    if (noSellerMsg) {
                         noSellerMsg.style.display = shouldShowNoSellerMsg ? 'block' : 'none';
                    }
                });
            }

            // Configuración y lógica del botón "Mostrar Todos"
            if (header) { // Asegura que el header exista
                showAllBtn.id = 'show-all-btn'; // Asigna ID para estilos si es necesario
                showAllBtn.className = 'btn btn-info btn-sm';
                showAllBtn.innerHTML = '<i class="fas fa-eye"></i> Mostrar Todos';
                showAllBtn.style.marginLeft = '10px'; // Margen por defecto
                showAllBtn.addEventListener('click', function() {
                    cardsContainer.style.display = 'grid'; // Muestra el contenedor
                    cardsContainer.classList.add('visible');
                    sellerFilter.value = ''; // Limpia el filtro
                    const event = new Event('input'); // Dispara evento input para refrescar vista
                    sellerFilter.dispatchEvent(event);

                    document.querySelectorAll('.vendedor-card').forEach(card => {
                        card.style.display = 'block'; // Muestra todas las cards
                    });
                     if (noSellerMsg) noSellerMsg.style.display = 'none'; // Oculta mensaje "no encontrado"
                });

                // Añade el botón al contenedor del header
                header.appendChild(showAllBtn);
            }

        });
    </script>
